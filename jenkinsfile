// File: Jenkinsfile (UPDATED FOR SANDBOX)

pipeline {
    agent any

    // The 'tools' block tells Jenkins to add specific tools to the PATH for this pipeline.
    tools {
        // The tool type is 'dockerTool', and its name must match
        // the name you gave it in Global Tool Configuration.
        dockerTool 'default-docker' 
    }

    environment {
        IMAGE_NAME = "my-webapp"
    }

    stages {
        stage('1. Checkout Code') {
            steps {
                echo "Code checked out successfully."
            }
        }
        
        stage('2. Build Docker Image') {
            steps {
                echo "--- Starting Docker Image Build ---"
                // Now the 'docker' command will be found because of the 'tools' block.
                sh "docker build -t ${env.IMAGE_NAME}:${env.BUILD_NUMBER} ."
                echo "--- Docker Image Build Complete ---"
            }
        }
    }
    
    post {
        always {
            echo "Pipeline finished. Listing Docker images..."
            sh "docker images"
        }
    }
}